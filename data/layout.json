{
  "type": "androidx.constraintlayout.widget.ConstraintLayout",
  "android": "http://schemas.android.com/apk/res/android",
  "app": "http://schemas.android.com/apk/res-auto",
  "layout_width": "match_parent",
  "layout_height": "wrap_content",
  "children": [
    {
      "type": "androidx.cardview.widget.CardView",
      "layout_width": "match_parent",
      "layout_height": "wrap_content",
      "layout_constraintTop_toTopOf": "parent",
      "children": [
        {
          "type": "androidx.constraintlayout.widget.ConstraintLayout",
          "layout_width": "match_parent",
          "layout_height": "match_parent",
          "children": [
            {
              "type": "androidx.appcompat.widget.LinearLayoutCompat",
              "id": "layout_finance",
              "layout_width": "match_parent",
              "layout_height": "wrap_content",
              "layout_margin": "4dp",
              "orientation": "horizontal",
              "layout_constraintStart_toStartOf": "parent",
              "layout_constraintTop_toTopOf": "parent",
              "children": [
                {
                  "type": "androidx.appcompat.widget.LinearLayoutCompat",
                  "layout_width": "25dp",
                  "layout_height": "wrap_content",
                  "layout_gravity": "center",
                  "background": "@drawable/table_border",
                  "gravity": "center",
                  "paddingStart": "2dp",
                  "paddingEnd": "2dp",
                  "visibility": "gone",
                  "children": [
                    {
                      "type": "androidx.appcompat.widget.AppCompatTextView",
                      "id": "txt_serial_no",
                      "layout_width": "wrap_content",
                      "layout_height": "25dp",
                      "layout_marginTop": "2dp",
                      "layout_marginBottom": "2dp",
                      "text": "S.L",
                      "textAlignment": "center",
                      "textColor": "@color/black"
                    }
                  ]
                },
                {
                  "type": "androidx.appcompat.widget.LinearLayoutCompat",
                  "layout_width": "90dp",
                  "layout_height": "wrap_content",
                  "layout_gravity": "center",
                  "layout_weight": "1",
                  "background": "@drawable/table_border",
                  "gravity": "center",
                  "children": [
                    {
                      "type": "androidx.appcompat.widget.AppCompatTextView",
                      "id": "txt_name",
                      "layout_width": "match_parent",
                      "layout_height": "25dp",
                      "layout_marginTop": "2dp",
                      "layout_marginBottom": "2dp",
                      "text": "name",
                      "textAlignment": "center",
                      "textColor": "@color/black"
                    }
                  ]
                },
                {
                  "type": "androidx.appcompat.widget.LinearLayoutCompat",
                  "layout_width": "90dp",
                  "layout_height": "wrap_content",
                  "layout_gravity": "center",
                  "layout_weight": "1",
                  "background": "@drawable/table_border",
                  "gravity": "center",
                  "children": [
                    {
                      "type": "androidx.appcompat.widget.AppCompatTextView",
                      "id": "txt_date",
                      "layout_width": "match_parent",
                      "layout_height": "25dp",
                      "layout_marginTop": "2dp",
                      "layout_marginBottom": "2dp",
                      "text": "Type",
                      "textAlignment": "center",
                      "textColor": "@color/black"
                    }
                  ]
                },
                {
                  "type": "androidx.appcompat.widget.LinearLayoutCompat",
                  "layout_width": "wrap_content",
                  "layout_height": "wrap_content",
                  "layout_gravity": "center",
                  "layout_weight": "2",
                  "background": "@drawable/table_border",
                  "gravity": "center",
                  "children": [
                    {
                      "type": "androidx.appcompat.widget.AppCompatButton",
                      "layout_width": "60dp",
                      "layout_height": "25dp",
                      "layout_marginTop": "2dp",
                      "layout_marginBottom": "2dp",
                      "background": "@drawable/round_btn_dark_blue",
                      "text": "View",
                      "layout_marginEnd": "2dp",
                      "textAlignment": "center",
                      "textColor": "@color/white"
                    },
                    {
                      "type": "androidx.appcompat.widget.AppCompatButton",
                      "layout_width": "60dp",
                      "layout_height": "25dp",
                      "layout_marginTop": "2dp",
                      "layout_marginBottom": "2dp",
                      "background": "@drawable/round_btn_dark_blue",
                      "text": "Delete",
                      "layout_marginStart": "2dp",
                      "backgroundTint": "@color/blood_red",
                      "textAlignment": "center",
                      "textColor": "@color/white"
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
